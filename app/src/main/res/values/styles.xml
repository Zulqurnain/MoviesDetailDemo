<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>

    <style name="MovieRatingBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/pizza</item>
        <item name="colorPrimary">@color/gray</item>
    </style>

    <style name="AppTextView.Dialog" />

    <style name="AppTextView.Dialog.Message">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_text_color_inverse</item>
    </style>

    <style name="AppButton.Inverse">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="AppTextView.Dialog.Title">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

</resources>
